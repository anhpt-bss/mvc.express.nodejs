<div class="container home-container">
    <div class="row mb-16">
        <div class="col-12">
            <div>
                <%- include('../components/bannerCarousel', {
                    slides: [
                        {
                            path: '/assets/images/home-carousel/slide1.jpg',
                            description: 'THI CÔNG NỘI THẤT PHÒNG NGỦ'
                        },
                        {
                            path: '/assets/images/home-carousel/slide2.jpg',
                            description: 'THI CÔNG NỘI THẤT PHÒNG TẮM'
                        },
                        {
                            path: '/assets/images/home-carousel/slide3.jpg',
                            description: 'THI CÔNG NỘI THẤT PHÒNG BẾP'
                        },
                        {
                            path: '/assets/images/home-carousel/slide4.jpg',
                            description: 'THI CÔNG NỘI THẤT QUẦY BAR'
                        },
                        {
                            path: '/assets/images/home-carousel/slide5.jpg',
                            description: 'THI CÔNG NỘI THẤT VĂN PHÒNG'
                        },
                        {
                            path: '/assets/images/home-carousel/slide6.jpg',
                            description: 'THI CÔNG NỘI THẤT PHÒNG KHÁCH'
                        },
                        {
                            path: '/assets/images/home-carousel/slide7.jpg',
                            description: 'THI CÔNG NỘI THẤT SHOWROOM'
                        },
                    ]
                }) %>
            </div>
        </div>
    </div>

    <div class="row mb-16">
        <div class="col-lg-4 col-md-4 col-sm-12">
            <div class="top-banner">
                <img src="/assets/images/home-carousel/banner_3_top_1.webp" alt=""/>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12">
            <div class="top-banner">
                <img src="/assets/images/home-carousel/banner_3_top_2.webp" alt=""/>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12">
            <div class="top-banner">
                <img src="/assets/images/home-carousel/banner_3_top_3.webp" alt=""/>
            </div>
        </div>
    </div>

    <% if (response.products) { %>
        <div class="row mb-16">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="section-container">
                    <div class="section-header">
                        <h2 class="title">Sản Phẩm</h2>
                        <a class="view-more-btn" href="/phong-khach">Xem Thêm >></a>
                    </div>

                    <!-- section body -->
                    <div class="row">
                        <% response.products.forEach(function(product) { %>
                            <div class="col-lg-3 col-md-4 col-sm-12">
                                <div class="grid-card-item">
                                    <div class="grid-card-main">
                                        <div class="grid-card-info">
                                            <a class="grid-card-img zoom" href="product/<%= product.slug %>">
                                                <% if(product.product_gallery && product.product_gallery.length > 0) { %>
                                                    <div class="image">
                                                        <img src="<%= product.product_gallery[0].path %>" alt="" title="<%= product.product_gallery[0].filename %>" />
                                                    </div>
                                                <% } %>

                                                <% if(product.product_discount > 0) { %>
                                                    <div class="discount"><%= `-${product.product_discount}%` %></div>
                                                <% } %>
                                            </a>
        
                                            <div class="grid-card-detail">
                                                <a class="product-name" href="product/<%= product.slug %>">
                                                    <%= product.product_name %>
                                                </a>
                                            </div>
                                        </div>
    
                                        <div class="grid-card-actions">
                                            <div class="product-price">
                                                <div class="new-price"><%= response.helper.addCommasToNumber(response.helper.calcPrice(product.product_price, product.product_discount)) %></div>
                                                <% if(product.product_discount > 0) { %>
                                                    <del class="old-price"><%= response.helper.addCommasToNumber(product.product_price) %></del>
                                                <% } %>
                                            </div>
                                            <!-- Add to cart -->
                                            <button class="add-to-cart-btn" id="add_to_cart_btn" data-product="<%= product._id %>">
                                                <svg class="icon icon-cart"><use xlink:href="/assets/icons/icomoon/symbol-defs.svg#icon-cart"></use></svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <%- include('./partials/testimonials-cta-service') %>
    
    <% if (response.blogs) { %>
        <div class="row mb-16">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="section-container">
                    <div class="section-header">
                        <h2 class="title">Tin Tức</h2>
                        <a class="view-more-btn" href="/tin-tuc">Xem Thêm >></a>
                    </div>

                    <!-- section body -->
                    <div class="row">
                        <% response.blogs.forEach(function(blog) { %>
                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <div class="grid-card-item">
                                    <div class="grid-card-main">
                                        <div class="grid-card-info">
                                            <a class="grid-card-img zoom" href="blog/<%= blog.slug %>">
                                                <% if(blog.banner) { %>
                                                    <div class="image">
                                                        <img src="<%= blog.banner.path %>" alt="" title="<%= blog.banner.filename %>" />
                                                    </div>
                                                <% } %>
                                            </a>
        
                                            <div class="grid-card-detail">
                                                <a href="blog/<%= blog.slug %>">
                                                    <div class="blog-name"><%= blog.title %></div>
                                                </a>
                                                <div class="created-time"><%= response.helper.renderDatetime(blog.created_time) %></div>
                                                <div class="blog-summary"><%= blog.summary %></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <div class="row">
        <div class="col-12">
            
        </div>
    </div>

    <div class="row">
        <div class="col-12">
        </div>
    </div>
</div>

<!-- Add to cart -->
<script src="/assets/js/cart.js"></script>