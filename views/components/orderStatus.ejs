<div class="com-order-status">
  <% if (status === 'awaiting_confirmation') { %>
      <div class="status" style="color: orange;">Chờ xác nhận</div>
  <% } %>
  <% if (status === 'processing') { %>
      <div class="status" style="color: blue;">Đang xử lý</div>
  <% } %>
  <% if (status === 'processed') { %>
      <div class="status" style="color: green;">Đã xử lý</div>
  <% } %>
  <% if (status === 'waiting_for_pickup') { %>
      <div class="status" style="color: purple;">Chờ lấy hàng</div>
  <% } %>
  <% if (status === 'picked_up') { %>
      <div class="status" style="color: teal;">Đã lấy hàng</div>
  <% } %>
  <% if (status === 'in_transit') { %>
      <div class="status" style="color: navy;">Đang giao</div>
  <% } %>
  <% if (status === 'delivered') { %>
      <div class="status" style="color: green;">Đã giao</div>
  <% } %>
  <% if (status === 'returning') { %>
      <div class="status" style="color: red;">Đang hoàn trả</div>
  <% } %>
  <% if (status === 'returned') { %>
      <div class="status" style="color: darkred;">Đã hoàn trả</div>
  <% } %>
  <% if (status === 'cancelled') { %>
      <div class="status" style="color: gray;">Đã hủy</div>
  <% } %>
</div>
